<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Logo -->
    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:contentDescription="Logo" />

    <!-- App Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MistriG"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Welcome Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" />

    <!-- OTP Instruction -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the 4-digit code sent via SMS at 0XX546"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#555555"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal" />

    <!-- Change Mobile Number -->
    <TextView
        android:id="@+id/txt_change_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Changed Your mobile Number?"
        android:textSize="14sp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/otp1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number" />

        <EditText
            android:id="@+id/otp2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/otp3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginStart="8dp" />

        <EditText
            android:id="@+id/otp4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginStart="8dp" />
        <EditText
            android:id="@+id/otp5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginStart="8dp" />
        <EditText
            android:id="@+id/otp6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/greyborders"            android:textSize="18sp"
            android:gravity="center"
            android:maxLength="1"
            android:inputType="number"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Resend OTP -->
    <TextView
        android:id="@+id/txt_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didnâ€™t get code?"
        android:textSize="14sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:focusable="true" />

    <!-- Continue Button -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:fontFamily="sans-serif-condensed"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#000000"
        android:layout_marginTop="16dp" />

</LinearLayout>
